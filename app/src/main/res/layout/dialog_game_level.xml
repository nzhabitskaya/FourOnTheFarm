<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
	android:background="@drawable/winner_dialog2"
	android:orientation="vertical">
	<LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="5dip"
        android:layout_marginBottom="5dip"
        android:gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/game_level0_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_weight="1"
	        android:gravity="left">
			<RadioButton
		        android:button="@drawable/button_rb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dip"
		        android:id="@+id/game_level0"
		        android:layout_gravity="center_vertical|left">
		    </RadioButton>
			<ImageView
		        android:id="@+id/text0"
		        android:layout_marginLeft="5dip"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/cb_text0"
				android:layout_gravity="center_vertical|left">
			</ImageView>
		</LinearLayout>
		<LinearLayout
		    android:id="@+id/game_level1_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_weight="1"
	        android:gravity="left">
			<RadioButton
		        android:button="@drawable/button_rb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/game_level1"
		        android:layout_marginLeft="10dip"
		        android:layout_gravity="center_vertical|left">
		    </RadioButton>
			<ImageView
		        android:id="@+id/text1"
		        android:layout_marginLeft="5dip"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/cb_text1"
				android:layout_gravity="center_vertical|left">
			</ImageView>
		</LinearLayout>
		<LinearLayout
		    android:id="@+id/game_level2_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_weight="1"
	        android:gravity="left">
			<RadioButton
		        android:button="@drawable/button_rb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/game_level2"
		        android:layout_marginLeft="10dip"
		        android:layout_gravity="center_vertical|left">
		    </RadioButton>
			<ImageView
		        android:id="@+id/text2"
		        android:layout_marginLeft="5dip"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/cb_text2"
				android:layout_gravity="center_vertical|left">
			</ImageView>
		</LinearLayout>
		<LinearLayout
		    android:id="@+id/game_level3_layout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_weight="1"
	        android:gravity="left">
			<RadioButton
		        android:button="@drawable/button_rb"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:id="@+id/game_level3"
		        android:layout_marginLeft="10dip"
		        android:layout_gravity="center_vertical|left">
		    </RadioButton>
			<ImageView
		        android:id="@+id/text3"
		        android:layout_marginLeft="5dip"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/cb_text3"
				android:layout_gravity="center_vertical|left">
			</ImageView>
		</LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonPanel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dip"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/ok_button"
	        android:background="@drawable/button_ok"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="5dip"/>
    </LinearLayout>
</LinearLayout>